import math

def hitung_luas_persegi(sisi):
    luas = sisi ** 2
    return luas

def hitung_keliling_persegi(sisi):
    keliling = 4 * sisi
    return keliling

def hitung_luas_persegi_panjang(panjang, lebar):
    luas = panjang * lebar
    return luas

def hitung_keliling_persegi_panjang(panjang, lebar):
    keliling = 2 * (panjang + lebar)
    return keliling

def hitung_luas_segitiga(alas, tinggi):
    luas = 0.5 * alas * tinggi
    return luas

def hitung_keliling_segitiga(sisi1, sisi2, sisi3):
    keliling = sisi1 + sisi2 + sisi3
    return keliling

def hitung_luas_lingkaran(jari_jari):
    luas = math.pi * (jari_jari ** 2)
    return luas

def hitung_keliling_lingkaran(jari_jari):
    keliling = 2 * math.pi * jari_jari
    return keliling

# Fungsi untuk mencetak menu
def cetak_menu():
    print("\nMenu:")
    print("1. Persegi")
    print("2. Persegi Panjang")
    print("3. Segitiga")
    print("4. Lingkaran")
    print("5. Keluar")

# Perulangan menu utama
def bangunDatar():
    print("Program menghitung luas dan keliling bangun datar")
    while True:
        cetak_menu()
        pilihan = input("Pilih bangun datar (1/2/3/4/5): ")

        if pilihan == "1":
            sisi_persegi = float(input("\nMasukkan panjang sisi persegi: "))
            luas_persegi = hitung_luas_persegi(sisi_persegi)
            keliling_persegi = hitung_keliling_persegi(sisi_persegi)
            print("Luas persegi:", luas_persegi)
            print("Keliling persegi:", keliling_persegi)

        elif pilihan == "2":
            panjang_persegi_panjang = float(input("\nMasukkan panjang persegi panjang: "))
            lebar_persegi_panjang = float(input("Masukkan lebar persegi panjang: "))
            luas_persegi_panjang = hitung_luas_persegi_panjang(panjang_persegi_panjang, lebar_persegi_panjang)
            keliling_persegi_panjang = hitung_keliling_persegi_panjang(panjang_persegi_panjang, lebar_persegi_panjang)
            print("Luas persegi panjang:", luas_persegi_panjang)
            print("Keliling persegi panjang:", keliling_persegi_panjang)

        elif pilihan == "3":
            alas_segitiga = float(input("\nMasukkan panjang alas segitiga: "))
            tinggi_segitiga = float(input("Masukkan tinggi segitiga: "))
            sisi1_segitiga = float(input("Masukkan panjang sisi 1 segitiga: "))
            sisi2_segitiga = float(input("Masukkan panjang sisi 2 segitiga: "))
            luas_segitiga = hitung_luas_segitiga(alas_segitiga, tinggi_segitiga)
            keliling_segitiga = hitung_keliling_segitiga(sisi1_segitiga, sisi2_segitiga, alas_segitiga)
            print("Luas segitiga:", luas_segitiga)
            print("Keliling segitiga:", keliling_segitiga)

        elif pilihan == "4":
            jari_jari_lingkaran = float(input("\nMasukkan jari-jari lingkaran: "))
            luas_lingkaran = hitung_luas_lingkaran(jari_jari_lingkaran)
            keliling_lingkaran = hitung_keliling_lingkaran(jari_jari_lingkaran)
            print("Luas lingkaran:", luas_lingkaran)
            print("Keliling lingkaran:", keliling_lingkaran)

        elif pilihan == "5":
            print("\nTerima kasih telah menggunakan program ini.")
            break

        else:
            print("\nPilihan tidak valid. Silakan pilih angka 1 sampai 5.")
        
        lagi = input("\nApakah Anda ingin melakukan operasi lagi? (ya/tidak): ")
        if lagi.lower() != 'ya':
            print("Terima kasih telah menggunakan program ini.")
            break
        
bangunDatar()